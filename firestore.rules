rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description: Manages access to user profile documents. Only the authenticated user can read and write their own profile.
     * @path: /users/{userId}
     * @allow: User (create) with matching UID can create their own profile. request.auth.uid == userId.
     * @allow: User (get, update, delete) with matching UID can read and modify their own profile. request.auth.uid == userId.
     * @deny: User attempts to create, read, update, or delete another user's profile. request.auth.uid != userId.
     * @principle: Enforces user ownership.  Users can only manage their own data.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted

      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description: Manages access to design documents within a user's design collection. Only the owner can create, read, update, and delete their own designs.
     * @path: /users/{userId}/designs/{designId}
     * @allow: User (create) with matching UID can create designs under their profile. request.auth.uid == userId AND request.resource.data.userId == userId.
     * @allow: User (get, update, delete) with matching UID can read and modify their own designs. request.auth.uid == userId AND resource.data.userId == userId.
     * @deny: User attempts to create, read, update, or delete another user's designs. request.auth.uid != userId.
     * @principle: Enforces document ownership.  Users can only manage their own designs.
     */
    match /users/{userId}/designs/{designId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId);
    }

    /**
     * @description: Manages access to template documents.  Templates are globally readable.
     * @path: /templates/{templateId}
     * @allow: Any user can (get, list) a template.
     * @deny: No user can (create, update, delete) a template via the client.
     * @principle: Public read-only access.
     */
    match /templates/{templateId} {
      allow get: if true;
      allow list: if true;

      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}